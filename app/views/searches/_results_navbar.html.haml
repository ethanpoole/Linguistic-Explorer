#results_navbar.navbar.navbar-default{ :style => "display: none;" }
  .container-fluid
    .navbar-inner
      %button.navbar-toggle{:data => {:toggle => "collapse", :target => "#results-navbar-collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    // Navbar for wider screens
    #results-navbar-collapse.collapse.navbar-collapse
      = link_to 'Views', '#', :class => "navbar-brand"
      %ul.nav.navbar-nav{:style => "position:relative"}
        %li.active
          = link_to '#', { :id => 'table', :rel => "tooltip", :title => "Table View", :data => {:toggle => "tooltip", :animation => "true"} } do
            = icon 'table', '', :class => "fa-15x"
        %li
          = link_to '#', { :id => 'mapit', :rel => "tooltip", :title => "Map View", :data => {:toggle => "tooltip", :animation => "true"} } do
            = icon 'map-marker', '', :class => "fa-15x"
        %li
          = link_to '#', { :id => 'vizit', :rel => "tooltip", :title => "Visualize it", :data => {:toggle => "tooltip", :animation => "true"} } do
            = icon 'photo', '', :class => "fa-15x"
      %ul.nav.navbar-nav.pull-right{:style => "position:sticky; right:5%"}
        %li
          - if user_has_any_role?
            = link_to '#', { :id => "downloadit", :rel => "tooltip", :title => "Download Results", :data => {:toggle => "tooltip", :animation => "true"} } do
              = icon 'download', '', :class => "fa-15x"
          - else
            = link_to '#', { :id => "downloadit-disabled", :rel => "tooltip", :title => "Download Results", :data => {:toggle => "tooltip", :animation => "true"}, :disabled => "disabled", :class => "disabled" } do
              = icon 'download', '', :class => "fa-15x"
        %li
          = link_to '#', { :id => 'saveit', :rel => "tooltip", :title => "Save Search", :data => {:toggle => "tooltip", :animation => "true"} } do
            = icon 'tags', '', :class => "fa-15x"
      = link_to 'Actions', '#', :class => "navbar-brand pull-right"

= render :partial => 'searches/save_search_form'
